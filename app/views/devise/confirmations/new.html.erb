<h2 class="header header--main visuallyhidden">Send again activation instructions</h2>

<%= form_for(resource, as: resource_name,  url: confirmation_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
        <legend>Send activation instructions</legend>
        <div class="form__group">
            <%= f.label :email, 'Adres e-mail, którego użyto podczas rejestracji', class: 'form__label required' %>
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form__text', placeholder: ' ', required: 'true' %>
        </div>

        <button class="form__submit">Send</button>
    </fieldset>
<% end %>

<%= render "devise/shared/links" %>
