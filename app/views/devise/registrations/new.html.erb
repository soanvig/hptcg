<% content_for :title do %>
    Sign up
<% end %>
<h2 class="header header--main visuallyhidden">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>
    <%= devise_error_messages! %>

    <fieldset>
        <legend>Sign up form</legend>
        <div class="form__group required">
            <%= f.label :email, 'Email', class: 'form__label' %>
            <%= f.email_field :email, class: 'form__text', placeholder: ' ', autofocus: true, required: true %>
        </div>
        <div class="form__group required">
            <%= f.label :username, 'Username', class: 'form__label' %>
            <%= f.text_field :username, class: 'form__text', placeholder: ' ', autofocus: true, required: true %>
        </div>
        <div class="form__group required">
            <%= f.label :password, "Password (minimum #{@minimum_password_length.to_s} characters)", class: 'form__label' %>
            <%= f.password_field :password, class: 'form__text', placeholder: ' ', autocomplete: 'off', required: true, pattern: ".{#{@minimum_password_length.to_s},}" %>
        </div>
        <div class="form__group required">
            <%= f.label :password_confirmation, 'Repeat password', class: 'form__label' %>
            <%= f.password_field :password_confirmation, class: 'form__text', placeholder: ' ', autocomplete: 'off', required: true %>
        </div>

        <button class="form__submit" type="submit">Sign up</button>
    </fieldset>
<% end %>

<%= render "devise/shared/links" %>
