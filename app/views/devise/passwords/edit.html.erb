<% content_for :title do %>
    Edit password
<% end %>
<h2 class="header header--main visuallyhidden">Edit password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <fieldset>
        <legend>Edit password</legend>
        <div class="form__group required">
            <%= f.label :password, "Password (minimum #{@minimum_password_length.to_s} characters)", class: 'form__label' %>
            <%= f.password_field :password, class: 'form__text', placeholder: ' ', autocomplete: 'off', autofocus: true, required: true, pattern: ".{#{@minimum_password_length.to_s},}" %>
        </div>
        <div class="form__group required">
            <%= f.label :password_confirmation, 'Repeat password', class: 'form__label' %>
            <%= f.password_field :password_confirmation, class: 'form__text', placeholder: ' ', autocomplete: 'off', required: true %>
        </div>

        <button class="form__submit" type="submit">Save new password</button>
    </fieldset>
<% end %>

<%= render "devise/shared/links" %>
